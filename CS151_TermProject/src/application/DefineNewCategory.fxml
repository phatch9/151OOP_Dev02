<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DefineNewCategoryController" spacing="20" alignment="CENTER">
    <Label text="Enter Category Name:"/>
    <TextField fx:id="categoryNameField" promptText="Category Name" maxWidth="200"/>
    <Button text="Save Category" onAction="#saveCategory"/>
    <Button text="Return to Home" onAction="#returnToHome"/>
</VBox>